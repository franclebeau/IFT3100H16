// IFT3100H16_VectorDeclaration.glsl
// Exemples de déclaration de variables de type vecteur en GLSL.

// déclaration d'une variable scalaire à virgule flottante de une dimension
float f = 1.0;

// déclaration d'une variable de type vecteur avec deux dimensions
vec2 vector2D = vec2(1.0, 2.0);

// déclaration d'une variable de type vecteur avec trois dimensions
vec3 vector3D = vec3(1.0, 2.0, 3.0);

// déclaration d'une variable de type vecteur avec quatre dimensions
vec4 vector4D = vec4(1.0, 2.0, 3.0, 4.0);
